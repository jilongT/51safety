    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>消防知识大闯关 - 修正版</title>
    <style>
        /* 新增初始化样式 */
        body {
            font-family: 'Microsoft YaHei', sans-serif;
            background: #fff3e6;
            margin: 0;
            padding: 20px;
            min-height: 100vh;
        }

        .quiz-container {
            max-width: 600px;
            margin: 0 auto;
        }

        .question-card {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin: 15px 0;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
            transform: scale(0.95);
            opacity: 0;
            animation: popIn 0.5s forwards;
        }

        @keyframes popIn {
            to { 
                transform: scale(1);
                opacity: 1;
            }
        }

        .options {
            display: grid;
            gap: 10px;
            margin-top: 15px;
        }

        .option-btn {
            background: #ffd9b3;
            border: none;
            padding: 12px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s;
            font-size: 16px;
        }

        .score-panel {
            text-align: center;
            font-size: 24px;
            color: #ff5500;
            margin: 20px 0;
        }

        .progress-bar {
            width: 100%;
            height: 8px;
            background: #eee;
            border-radius: 4px;
            margin: 10px 0;
        }

        .progress {
            height: 100%;
            background: #ff5500;
            border-radius: 4px;
            transition: width 0.5s;
        }
